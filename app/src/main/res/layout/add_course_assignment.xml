<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/actionBarSecondary"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/actionBar_backBtn"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="start"
                    android:padding="19dp"/>

                <TextView
                    android:id="@+id/actionBar_title"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/actionBar_backBtn"
                    android:layout_weight="1.8"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/heading" />


            </LinearLayout>

        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_outer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addcourseassignmentheading"
                        android:textColor="@color/textHeading"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="22dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/topimage"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/timelinepage"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textColor="@color/textHeading"
                        android:textStyle="bold"
                        android:textSize="@dimen/primaryText"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/assignmentdate"
                        android:layout_weight="1"
                        android:textColor="@color/textHeading"
                        android:textStyle="bold"
                        android:textSize="@dimen/secondaryText"/>
                    <TextView
                        android:id="@+id/assignmentdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/submissionDate"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <TextView
                            android:id="@+id/submissionDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/evaluationDate"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <TextView
                            android:id="@+id/evaluationDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/createdBy"
                        android:layout_weight="1"
                        android:textColor="@color/textHeading"
                        android:textStyle="bold"
                        android:textSize="@dimen/secondaryText"/>
                    <TextView
                        android:id="@+id/createdBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/evaluatedBy"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <TextView
                            android:id="@+id/evaluatedBy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="horizontal"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:visibility="visible"
                                android:background="@drawable/green_border"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/homedocument_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/homework_documents"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/homedoc_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/documents"
                                android:layout_weight="1.5"
                                android:textColor="@color/textHeading"
                                android:textStyle="bold"
                                android:textSize="@dimen/secondaryText"/>
                            <ImageView
                                android:id="@+id/homedocument"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_file_download"
                                android:layout_weight="0.5"
                                android:tint="@color/hyperLink"
                                android:textColor="@color/textHeading"
                                android:textSize="@dimen/secondaryText"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/document_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/uploaded_documents"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/doc_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/documents"
                                android:layout_weight="1.5"
                                android:textColor="@color/textHeading"
                                android:textStyle="bold"
                                android:textSize="@dimen/secondaryText"/>
                        <ImageView
                            android:id="@+id/document"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file_download"
                            android:layout_weight="0.5"
                            android:tint="@color/hyperLink"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/teacher_remark_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/teacher_remark"
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textStyle="bold"
                            android:textSize="@dimen/secondaryText"/>
                        <TextView
                            android:id="@+id/teacher_remark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/textHeading"
                android:layout_height="wrap_content"
                android:textColorHint="@color/seperator"
                android:layout_margin="10dp"
                android:hint="@string/title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/titleET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/secondaryText"
                    android:editable="false"
                    android:textColor="@color/textHeading" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/textHeading"
                android:layout_height="wrap_content"
                android:textColorHint="@color/seperator"
                android:layout_margin="10dp"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/secondaryText"
                    android:editable="false"
                    android:textColor="@color/textHeading"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/textHeading"
                android:layout_height="wrap_content"
                android:textColorHint="@color/seperator"
                android:layout_margin="10dp"
                android:hint="@string/Message">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/messageET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/secondaryText"
                    android:textColor="@color/textHeading"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:src="@drawable/upload_file"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/textview"
                        android:hint="@string/selectfile"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/secondaryText"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_style_grey"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/primaryText"
                    android:text="@string/choosefile" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/addLeave_dialog_submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/green_curve_border"
            android:text="@string/submit"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold" />

    </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>