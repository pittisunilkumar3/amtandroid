<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_background_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    android:elevation="8dp"
                    android:layout_marginEnd="@dimen/card_end"
                    android:layout_marginStart="@dimen/card_start"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:id="@+id/teacher_profile_headerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/teacher_profile_details"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:id="@+id/teacher_profile_nameTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Teacher Name"
                                android:textColor="@color/textHeading"
                                android:textSize="@dimen/largeheading"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/teacher_profile_designationTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/teacher_profile_nameTV"
                                android:layout_marginTop="5dp"
                                android:text="Designation"
                                android:textColor="@color/textHeading"
                                android:textSize="@dimen/secondaryText" />

                            <TextView
                                android:id="@+id/teacher_profile_employeeIdHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/teacher_profile_designationTV"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Emp. ID:"
                                android:textColor="@color/textHeading"
                                android:textSize="@dimen/secondaryText" />

                            <TextView
                                android:id="@+id/teacher_profile_employeeIdTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/teacher_profile_designationTV"
                                android:layout_toEndOf="@id/teacher_profile_employeeIdHeader"
                                android:text="EMP001"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/textHeading"
                                android:textSize="@dimen/secondaryText" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_toEndOf="@id/teacher_profile_details"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/teacher_profile_imageIV"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/demo" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/teacher_profile_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/teacher_profile_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
